<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="CardTradeHub - Your trusted platform for card trading" />
    <title>@ViewData["Title"] - CardTradeHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/images/logo.png" alt="CardTradeHub Logo" height="40" class="me-2">
                    <span class="d-none d-sm-inline">CardTradeHub</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto"> # # <!-- me-auto使菜单项靠左对齐 -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i>
                                <span class="ms-1">Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cards" asp-action="Index">
                                <i class="bi bi-grid"></i>
                                <span class="ms-1">Cards</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-route="trade">
                                <i class="bi bi-arrow-left-right"></i>
                                <span class="ms-1">My Trades</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock"></i>
                                    <span class="ms-1">Admin Dashboard</span>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-speedometer2"></i>
                                            <span class="ms-2">Admin Dashboard</span>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="ManageCards">
                                            <i class="bi bi-card-list"></i>
                                            <span class="ms-2">Card Management</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="ManageTrades">
                                            <i class="bi bi-arrow-left-right"></i>
                                            <span class="ms-2">Trade Management</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="ManageUsers">
                                            <i class="bi bi-people"></i>
                                            <span class="ms-2">User Management</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container py-4">
            @if (IsSectionDefined("Header"))
            {
                @RenderSection("Header", required: false)
            }
            else
            {
                <div class="row mb-4">
                    <div class="col">
                        <h1 class="display-4">@ViewData["Title"]</h1>
                    </div>
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto">
        <div class="container">
            <div class="row py-3">
                <div class="col-12 col-md-6 mb-3 mb-md-0">
                    <h5 class="text-light">CardTradeHub</h5>
                    <p class="text-light mb-0">Your trusted platform for card trading.</p>
                </div>
                <div class="col-12 col-md-6 text-center text-md-end">
                    <div class="mb-2">
                        <a href="#" class="text-light text-decoration-none me-3">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="text-light text-decoration-none me-3">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="text-light text-decoration-none">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                    <p class="text-light mb-0">&copy; @DateTime.Now.Year CardTradeHub. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


