@model CardTradeHub.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h2 class="card-title mb-3">@(Model?.ErrorTitle ?? "An Error Occurred")</h2>
                    <p class="card-text text-muted mb-4">
                        @(Model?.ErrorMessage ?? "Sorry, something went wrong while processing your request.")
                    </p>
                    @if (Model?.ShowRequestId ?? false)
                    {
                        <p class="text-muted small mb-4">
                            <strong>Request ID:</strong> @Model.RequestId
                        </p>
                    }
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Return to Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
