@model CardTradeHub.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h1 class="text-danger mb-4">@(Model.ErrorTitle ?? "An Error Occurred")</h1>
                    
                    <div class="alert alert-danger">
                        <p class="mb-0">@(Model.ErrorMessage ?? "An error occurred while processing your request.")</p>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="text-muted small mb-3">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary me-2">Back to Previous Page</a>
                        <a href="/" class="btn btn-primary">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
