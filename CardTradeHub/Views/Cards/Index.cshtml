@model IEnumerable<CardTradeHub.Models.Card>
@{
    ViewData["Title"] = "Browse Cards";
}

<div class="container mt-4">

    <!-- 搜索和筛选区域 -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row mb-3">
                <!-- 搜索框 -->
                <div class="col-md-6">
                    <form method="get" class="search-form">
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" 
                                   placeholder="Search by title, description or category..." 
                                   value="@ViewBag.SearchTerm">
                            <input type="hidden" name="category" value="@ViewBag.SelectedCategory">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i>
                                Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- 类别筛选 -->
            <div>
                <h5 class="mb-3">Filter by Category</h5>
                <div class="d-flex flex-wrap gap-2">
                    <a href="@Url.Action("Index", new { searchTerm = ViewBag.SearchTerm })" 
                       class="btn btn-outline-primary category-btn @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "active" : "")">
                        All Categories
                    </a>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <a href="@Url.Action("Index", new { category = category, searchTerm = ViewBag.SearchTerm })" 
                           class="btn btn-outline-primary category-btn @(category == ViewBag.SelectedCategory ? "active" : "")">
                            @category
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <style>
        /* 类别按钮样式 */
        .category-btn {
            min-width: 100px;
            text-align: center;
            transition: background-color 0.3s, color 0.3s;
            border: 1px solid var(--bs-primary);
            padding: 0.375rem 0.75rem;
            line-height: 1.5;
            height: 38px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .category-btn:hover,
        .category-btn.active {
            background-color: var(--bs-primary);
            color: white;
        }

        /* 搜索表单样式 */
        .search-form .input-group {
            max-width: 600px;
        }

        .search-form .form-control,
        .search-form .btn {
            height: 38px;
            padding: 0.375rem 0.75rem;
            line-height: 1.5;
        }

        .search-form .form-control {
            border-right: none;
        }

        .search-form .btn {
            border-left: none;
            display: flex;
            align-items: center;
        }

        .search-form .btn i {
            margin-right: 0.5rem;
        }

        /* 卡片布局样式 */
        .card {
            display: flex;
            flex-direction: column;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            padding: 1rem;
            flex: 1 0 auto;
        }

        .card-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 0.5rem;
            margin-top: auto;
            padding-top: 1rem;
            width: 100%;
        }

        .card-price {
            font-weight: 600;
            color: var(--bs-gray-900);
            margin: 0;
            white-space: nowrap;
            overflow: hidden;
            min-width: 0;
            flex: 1;
            font-size: clamp(0.7rem, 3vw, 1rem);
        }

        .details-btn {
            width: 110px;
            padding: 0.375rem 0;
            font-size: 0.875rem;
            flex-shrink: 0;
        }

        .card-title {
            height: 48px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .card-description {
            height: 60px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            font-size: 0.875rem;
            margin-bottom: 1rem;
            color: var(--bs-gray-700);
        }

        .card-category {
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
            color: var(--bs-secondary);
        }

        .card-footer {
            font-size: 0.75rem;
            color: var(--bs-gray-600);
        }
    </style>

    <!-- 卡片网格 -->
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var card in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-container" style="position: relative; padding-bottom: 100%; height: 0; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(card.ImageUrl))
                        {
                            <img src="@card.ImageUrl" class="card-img-top" alt="@card.Title"
                                 style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/card-placeholder.jpg" class="card-img-top" alt="Card placeholder"
                                 style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;" />
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title" title="@card.Title">@card.Title</h5>
                        <div class="card-category">@card.Category</div>
                        <div class="card-description" title="@card.Description">@card.Description</div>
                        <div class="card-actions">
                            <span class="card-price">@card.Price.ToString("C")</span>
                            <a asp-action="Details" asp-route-id="@card.CardID" class="btn btn-primary details-btn">View Details</a>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <small>
                            Listed by @card.User.Username on @card.ListedDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- 分页 -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (ViewBag.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { category = ViewBag.SelectedCategory, searchTerm = ViewBag.SearchTerm, page = ViewBag.CurrentPage - 1 })">Previous</a>
                        </li>
                    }
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { category = ViewBag.SelectedCategory, searchTerm = ViewBag.SearchTerm, page = i })">@i</a>
                        </li>
                    }
                    @if (ViewBag.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { category = ViewBag.SelectedCategory, searchTerm = ViewBag.SearchTerm, page = ViewBag.CurrentPage + 1 })">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script>
        // 为了让卡片图片保持相同的宽高比
        document.addEventListener('DOMContentLoaded', function () {
            const cardImgs = document.querySelectorAll('.card-img-top');
            cardImgs.forEach(img => {
                img.style.height = '200px';
                img.style.objectFit = 'cover';
            });
        });
    </script>
} 