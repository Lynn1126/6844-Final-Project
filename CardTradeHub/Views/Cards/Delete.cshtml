@model CardTradeHub.Models.Card

@{
    ViewData["Title"] = "Delete Card";
}

<div class="container mt-4">
    <h2>Delete Card</h2>
    <h3>Are you sure you want to delete this card?</h3>
    <hr />
    
    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">
                        <small class="text-muted">
                            Category: @Model.Category<br />
                            Condition: @Model.Condition<br />
                            Price: $@Model.Price.ToString("F2")
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.CardID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="MyCards" class="btn btn-secondary">Cancel</a>
    </form>
</div> 