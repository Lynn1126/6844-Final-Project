@model CardTradeHub.Models.ViewModels.MyCardsViewModel

@{
    ViewData["Title"] = "My Cards";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>My Cards</h2>
            <p>Welcome, @Model.UserName! You have @Model.TotalCards cards with a total value of @Model.TotalValue.ToString("C")</p>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">List New Card</a>
        </div>
    </div>

    @if (!Model.Cards.Any())
    {
        <div class="alert alert-info">
            You haven't listed any cards yet. Start by listing your first card!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var card in Model.Cards)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(card.ImageUrl))
                        {
                            <img src="@card.ImageUrl" class="card-img-top" alt="@card.Title">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@card.Title</h5>
                            <p class="card-text">@card.Description</p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Category: @card.Category<br />
                                    Condition: @card.Condition<br />
                                    Price: @card.Price.ToString("C")<br />
                                    Status: @card.Status
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a asp-action="Edit" asp-route-id="@card.CardID" class="btn btn-outline-primary">Edit</a>
                                @if (card.Status == "Available")
                                {
                                    <a asp-action="UnlistCard" asp-route-id="@card.CardID" class="btn btn-outline-warning">Unlist</a>
                                }
                                else
                                {
                                    <a asp-action="ListCard" asp-route-id="@card.CardID" class="btn btn-outline-success">List</a>
                                }
                                <a asp-action="Delete" asp-route-id="@card.CardID" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 