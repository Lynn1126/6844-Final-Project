@model CardTradeHub.Models.ViewModels.MyCardsViewModel

@{
    ViewData["Title"] = "My Cards";
}

<div class="container">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Cards</h1>
        <a asp-action="Create" class="btn btn-primary">List New Card</a>
    </div>

    <div class="row g-4">
        @foreach (var card in Model.UserCards)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(card.ImageUrl))
                    {
                        <div class="card-img-container" style="position: relative; padding-bottom: 100%; height: 0; overflow: hidden;">
                            <img src="@card.ImageUrl" class="card-img-top" alt="@card.Title" 
                                 style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                    }
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@card.Title</h5>
                            <span class="badge bg-@(card.Status == "Available" ? "success" : "secondary")">
                                @card.Status
                            </span>
                        </div>
                        <p class="card-text text-muted mb-2">@card.Description</p>
                        <div class="d-flex flex-column gap-1 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Category:</span>
                                <span>@card.Category</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Condition:</span>
                                <span>@card.Condition</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Price:</span>
                                <span class="fw-bold text-primary">@card.Price.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@card.CardID" class="btn btn-outline-primary">Edit</a>
                            @if (card.Status == "Available")
                            {
                                <a asp-action="UnlistCard" asp-route-id="@card.CardID" class="btn btn-outline-warning">Unlist</a>
                            }
                            <form asp-action="Delete" asp-route-id="@card.CardID" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this card?');">
                                <button type="submit" class="btn btn-outline-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .btn-group {
            display: flex;
        }
        .btn-group > form {
            flex: 1;
        }
        .btn-group .btn {
            border-radius: 0;
            flex: 1;
        }
        .btn-group > :first-child .btn {
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
        }
        .btn-group > :last-child .btn {
            border-top-right-radius: 0.375rem;
            border-bottom-right-radius: 0.375rem;
        }
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
    </style>
} 