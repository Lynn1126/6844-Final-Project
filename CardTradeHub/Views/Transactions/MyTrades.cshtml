@model CardTradeHub.Models.ViewModels.MyTradesViewModel

@{
    ViewData["Title"] = "My Trades";
}

<div class="container mt-4">
    <h1 class="mb-4">My Trades</h1>

    <div class="row">
        <div class="col-md-6">
            <h2>Purchases</h2>
            @if (!Model.Purchases.Any())
            {
                <div class="alert alert-info">
                    <p class="mb-0">You haven't purchased any cards yet.</p>
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var purchase in Model.Purchases)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-1">@purchase.Card.Title</h5>
                                <span class="badge bg-success">Purchased</span>
                            </div>
                            <p class="mb-1">From: @purchase.Seller.Username</p>
                            <p class="mb-1">Price: $@purchase.Amount.ToString("N2")</p>
                            <small class="text-muted">Date: @purchase.Date.ToString("MMM dd, yyyy")</small>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="col-md-6">
            <h2>Sales</h2>
            @if (!Model.Sales.Any())
            {
                <div class="alert alert-info">
                    <p class="mb-0">You haven't sold any cards yet.</p>
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var sale in Model.Sales)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-1">@sale.Card.Title</h5>
                                <span class="badge bg-primary">Sold</span>
                            </div>
                            <p class="mb-1">To: @sale.Buyer.Username</p>
                            <p class="mb-1">Price: $@sale.Amount.ToString("N2")</p>
                            <small class="text-muted">Date: @sale.Date.ToString("MMM dd, yyyy")</small>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div> 