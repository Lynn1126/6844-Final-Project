@model IEnumerable<CardTradeHub.Models.Transaction>

@{
    ViewData["Title"] = "Manage Trades";
}

<div class="container mt-4">
    <h1 class="mb-4">Manage Trades</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Card</th>
                    <th>Buyer</th>
                    <th>Seller</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trade in Model)
                {
                    <tr>
                        <td>@trade.TransactionID</td>
                        <td>@trade.Card?.Title</td>
                        <td>@trade.Buyer?.UserName</td>
                        <td>@trade.Seller?.UserName</td>
                        <td>@trade.Amount.ToString("C")</td>
                        <td>
                            <span class="badge bg-@(trade.Status switch {
                                "Pending" => "warning",
                                "Completed" => "success",
                                "Cancelled" => "danger",
                                _ => "secondary"
                            })">@trade.Status</span>
                        </td>
                        <td>@trade.Date.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-info" onclick="viewDetails(@trade.TransactionID)">Details</button>
                                <button class="btn btn-sm btn-warning" onclick="updateStatus(@trade.TransactionID)">Update Status</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
