@model IEnumerable<CardTradeHub.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <span class="badge bg-@(user.IsActive ? "success" : "danger")">
                                @(user.IsActive ? "Active" : "Disabled")
                            </span>
                        </td>
                        <td>@user.RegisterDate.ToString("yyyy-MM-dd")</td>
                        <td>@(user.LastLoginDate != null ? user.LastLoginDate.ToString("yyyy-MM-dd HH:mm") : "Never logged in")</td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-primary" onclick="editUser('@user.Id')">Edit</button>
                                <button class="btn btn-sm @(user.IsActive ? "btn-danger" : "btn-success")" 
                                        onclick="toggleUserStatus('@user.Id', @user.IsActive.ToString().ToLower())">
                                    @(user.IsActive ? "Disable" : "Enable")
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

